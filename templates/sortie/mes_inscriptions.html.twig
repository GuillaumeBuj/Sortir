{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Liste de mes inscriptions
{% endblock %}

{% block body %}
    <h2>Sorties auxquelles je suis inscrit</h2><br>
    <section>
        <ul>
            {% for sortie in sorties %}
                <li>
                    Le {{ sortie.dateHeureDebut | date('d-m-Y')}}:
                    <a href="{{ path('details', {'id': sortie.id}) }}">
                         {{ sortie.nom }}
                    </a>
                    , à {{ sortie.lieu.nom }}. Etat: {{ sortie.etat.libelle }}
                    {% if(sortie.getParticipants().contains(app.user)) %}
                        <a href="{{ path('sortie_se_desister', {'id': sortie.id}) }}"> -Se désister- </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}