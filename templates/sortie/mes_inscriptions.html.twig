{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Liste de mes inscriptions
{% endblock %}

{% block body %}
    <section>
        <ul>
            {% for sortie in sorties %}
                <li>Le {{ sortie.dateHeureDebut | date('d-m-Y')}}: {{ sortie.nom }}, à {{ sortie.lieu.nom }}. Etat: {{ sortie.etat.libelle }}
                    {% if(sortie.getParticipants().contains(app.user)) %}
                        <a href="{{ path('sortie_mes_inscriptions', {'id': sortie.id}) }}"> -Se désister- </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}